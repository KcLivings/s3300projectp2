<div class="container-fluid p-5 bg-white text-black text-center border">
  <h1>
    <strong>Name:</strong>
    <%= @item.title %>
  </h1>
</div>

<% if @item.displayimage.attached? %>
  <div class="container">
    <% @item.displayimage.each do |item| %>
      <img class="rounded" src="<%= (url_for(@item.displayimage)) %>" alt="mouseimage"> 
    <% end %>
  </div>
<%end %>

<div class="container-fluid p-5 bg-white text-black text-center border">
  <h4>
    <strong>Description:</strong>
    <%= @item.description %>
  </h4>
</div>

<div class="container-fluid p-1 bg-white text-black text-center">
  <h4>
    <strong>Price:</strong>
    $<%= @item.price %>
  </h4>
</div>

<div class="container-fluid p-1 bg-white text-black text-center">
  <h4>
    <strong>Brand:</strong>
    <%= @item.brand %>
  </h4>
</div>

<div class="container-fluid p-1 bg-white text-black text-center">
  <h4>
    <strong>Mousestyle:</strong>
    <%= @item.mousestyle %>
  </h4>
</div>


<div class="container-fluid p-5 bg-white text-black text-center border">
  <% if user_signed_in? %>
    <button type="button" class="btn btn-outline-dark"> <%= link_to 'Edit', edit_item_path(@item) , class:"showlink" %> </button> |
  <% end %>
  <button type="button" class="btn btn-outline-dark"> <%= link_to 'Back', items_path , class:"noUnderline" %> </button>
</div>
