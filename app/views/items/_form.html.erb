<%= form_with(model: item) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  

  <div class="container-fluid p-5 bg-white text-black text-left border">
    <h1>
      <div class="form-group">
        <label for="nameInput">Name of Item: </label>
        <div>
          <%= form.text_field :title %>
        </div>
        <!-- <input class="form-control form-control-lg" id="nameInput" placeholder="Enter New Name"> <%= form.text_field :mousestyle %> </input>
        -->
        </div>
    </h1>
  </div>

  <div class="container-fluid p-5 bg-white text-black text-left">
    <div class="form-group">
      <label for="imageInput">Input Images: </label>
      <div>
        <!-- <input type="file" class="form-control-file" id="imageInput"> -->
        <%= f.file_field :displayimage %>
      </div>
    </div>
  </div>

  <div class="container-fluid p-5 bg-white text-black text-left border">
    <div class="form-group">
      <label for="descriptionInput">Item description: </label>
      
      <div>
        <%= form.text_field :description %>
      </div>
      
      <!-- <textarea class="form-control" id="descriptionInput" rows="3" placeholder="Enter Description"></textarea> -->
    </div>
  </div>

  <div class="container-fluid p-1 ps-5 bg-white text-black text-left form-group">
    <label>Price: </label>
    <div>
      <%= form.text_field :price %>
    </div>
    <!-- <input class="form-control" placeholder="$00.00"> -->
  </div>

  <div class="container-fluid p-1 ps-5 bg-white text-black text-left form-group">
    <label>Brand: </label>

    <div>
      <%= form.text_field :brand %>
    </div>

    <!--
    <select class="form-control">
      <option>--</option>
      <option>ASUS</option>
      <option>Corsair</option>
      <option>Logitech</option>
      <option>Redragon</option>
      <option>Apple</option>
    </select> -->
  </div>

  <div class="container-fluid p-1 ps-5 bg-white text-black text-left form-group field">
    <label>Mousestyle: </label>
    <div>
      <%= form.text_field :mousestyle %>
    </div>
  </div>

  <div class="actions p-5">
    <%= form.submit %>
  </div>
<% end %>
